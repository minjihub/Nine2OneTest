<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/place_name_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:layout_marginRight="16dp"
        tools:text="장소명"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/address_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="14dp"
        tools:text="서울 마포구 합정동 373-17"
        app:layout_constraintTop_toBottomOf="@id/place_name_view"/>

    <TextView
        android:id="@+id/distance_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textSize="14dp"
        tools:text="20.0m"
        app:layout_constraintTop_toBottomOf="@id/address_view"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#eee"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/distance_view"/>

</androidx.constraintlayout.widget.ConstraintLayout>